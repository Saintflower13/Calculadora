<Window x:Class="View.Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.Calculadora"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <TextBox x:Name="edtValorA" HorizontalAlignment="Left" Margin="40,46,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="121" Height="24" FontSize="18" TextAlignment="Center"/>
        <TextBox x:Name="edtValorB" HorizontalAlignment="Center" Margin="0,46,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="24" FontSize="18"/>
        <ComboBox x:Name="cmbOperacoes" HorizontalAlignment="Left" Margin="180,48,0,0" VerticalAlignment="Top" Width="40" FontSize="18">
            <ComboBoxItem Content="+" FontSize="20"/>
            <ComboBoxItem Content="-" FontSize="20"/>
            <ComboBoxItem Content="*" FontSize="20"/>
            <ComboBoxItem Content="/" FontSize="20"/>
        </ComboBox>
        <Label x:Name="lbResultado" Content="0" HorizontalAlignment="Left" Margin="418,48,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="=" HorizontalAlignment="Left" Margin="382,46,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
